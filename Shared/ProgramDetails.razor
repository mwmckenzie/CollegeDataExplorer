<MudPaper Class="pa-4">
    <MudPaper Class="pa-4 mb-4">
        <MudText Typo="Typo.h3">@summerProgram.name</MudText>
        <MudStack Row="true" Justify="Justify.SpaceBetween">
            <MudText Typo="Typo.body1">@summerProgram.displayName</MudText>
